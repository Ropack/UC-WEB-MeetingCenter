<div class="container">
  <%= link_to admin_dashboard_index_path, class: 'button button-secondary' do %>
    <span class="fa fa-arrow-left"></span>Back to dashboard
  <% end %>

  <p id="notice"><%= notice %></p>
  <%= link_to new_admin_student_path, class: 'button button-primary right' do %>
    <span class="fa fa-plus"></span>New Student
  <% end %>
  <h1>Students</h1>

  <% if @admin_students.any? %>
  <table>
    <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @admin_students.each do |admin_student| %>
      <tr>
        <td><%= admin_student.first_name %> <%= admin_student.last_name %></td>
        <td><%= admin_student.email %></td>
        <td><%= link_to 'Show', [:admin, admin_student] %></td>
        <td><%= link_to 'Edit', edit_admin_student_path(admin_student) %></td>
        <td><%= link_to 'Destroy', [:admin, admin_student], method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <% else %>
    There are no students registered yet. <%= link_to 'Create first one here!', new_admin_student_path%>
  <% end %>
</div>