
<%= simple_form_for [:admin, @admin_lesson.course, @admin_lesson] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.select :room_id, Room.all.collect {|p| [p.title, p.id]} %>
    <%= f.select :teacher_id, Teacher.all.collect {|p| [p.full_name, p.id]} %>
  </div>

  <div class="form-actions">
    <%= f.button :magic_submit %>
  </div>
<% end %>
