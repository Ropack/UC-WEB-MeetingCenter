
<%= simple_form_for [:admin, @admin_course] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :code %>
    <%= f.input :language, include_blank: false %>
    <%= f.input :study_type, include_blank: false  %>
  </div>

  <div class="form-actions">
    <%= f.button :magic_submit %>
  </div>
<% end %>
