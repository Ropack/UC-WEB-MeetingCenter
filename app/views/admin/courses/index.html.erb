<div class="container">
  <%= link_to admin_dashboard_index_path, class: 'button button-secondary' do %>
    <span class="fa fa-arrow-left"></span>Back to dashboard
  <% end %>

  <p id="notice"><%= notice %></p>
  <%= link_to new_admin_course_path, class: 'button button-primary right' do %>
    <span class="fa fa-plus"></span>New Course
  <% end %>
  <h1>Courses</h1>
  <% if @admin_courses.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Language</th>
        <th>Study type</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @admin_courses.each do |admin_course| %>
        <tr>
          <td><%= admin_course.title %></td>
          <td><%= admin_course.language %></td>
          <td><%= admin_course.study_type %></td>
          <td><%= link_to 'Show', [:admin, admin_course] %></td>
          <td><%= link_to 'Edit', edit_admin_course_path(admin_course) %></td>
          <td><%= link_to 'Destroy', [:admin, admin_course], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
   There is no course here yet. <%= link_to 'Add one here!', new_admin_course_path %>
  <% end %>
</div>